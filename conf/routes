# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.index

GET     /galleries                          controllers.Galleries.main
GET     /pictures                           controllers.Pictures.pictures0()
GET     /pictures/refresh                   controllers.Pictures.refreshFolders()
GET     /pictures/:mainFolder               controllers.Pictures.pictures1(mainFolder)
GET     /pictures/:mainFolder/:subFolder    controllers.Pictures.pictures2(mainFolder, subFolder)
GET     /categories                         controllers.Categories.main

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
